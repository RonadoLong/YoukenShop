/**index.wxss**/

.container{
  height: 100%;
  padding: 0%;
  margin: 0%;
	background: #fff;
  margin-bottom:1rem;
}
.slide-image {
  width: 100%; 
  height: 100%;
  position: relative;
}
.index_banner {
  position:relative;
}


.index_banner .wx-swiper-dots.wx-swiper-dots-horizontal{
    margin-bottom: 30rpx;
}

.index_search {
  position: absolute;
  top: .5rem;
  width: 90%;
  right:0;
  left:0;
  height: 1.6rem;
  line-height: 1.6rem;
  background-color:rgba(250,250,250,.8);
  z-index: 99;
  border-radius:20px;
  margin:0 auto;

}
.index_search .inputSearch{
  font-size:.7rem;
  padding-left:1.5rem;
  width:88%;
  margin-left:.5rem;
  height: 1.6rem;
  line-height: 1.6rem;
  display: flex;        
  align-items:center; 
}
.index_search .iconSearch{
  background-repeat:no-repeat;
  background-size: .9rem;
  background-position: center;
  height:1rem;
  width:1rem;
  position:absolute;
  top:.3rem;
  left:.5rem;

}
.van-tabs__scroll--line{
  width:100%;
  background: #ffffff;
  border-top-left-radius:.7rem;
  border-top-right-radius:.7rem;
}

.tabConten{
  width:100%;
  margin-top:-1rem;
  box-sizing:border-box;
  background: #ffffff;
}
.van-tab__pane{ 
  margin-top:1rem;
  padding:0 .5rem;
}
.tabTitle{
  font-size:1.1rem;
}
.van-tabs__wrap{
  border-bottom:1px solid #ccc;

}
.menuContent{
  width:20%;
  text-align: center;
  margin-bottom:1rem;
  display:inline-block;

}
.menuContent .title{
  display: block;
  margin-top:.2rem;
  color:#555555;
  font-size: .7rem;
}
.van-tabs__line{
  background-color:#fcc443 !important;
  height:2px !important;
}
.menuContent .imgs{
  width:2rem;
  height:2rem;
  border:1px solid #eaeaea;
  display:block;
  margin:0 auto;
  line-height:2rem;
  border-radius:100%;
  position: relative;
}
.menuContent .imgs span{
  display:flex;
  width:1.6rem;
  height:1.6rem;
  background-size: 1.4rem;
  background-repeat:no-repeat;
  margin-top: .3rem;
  margin-left:.3rem;

}
.van-tabs__wrap{
  background:none !important
}
.van-cell__title{
  width:100%;
  margin:0 auto;
  text-align: center;
}
.panelContent{
  font-size: .7rem;
}
.van-col{
  padding-right:0 !important;
  padding-left:.5rem !important;
}

.Oils{
  width:100%;
  display: blcok;
  position: relative;
  height:8rem;
  margin: 0 0 10px 0;
}
.Oils image{
  width:100% !important;
  height:8rem;
  margin:0 auto;
  background-size:100%;
  overflow: hidden;
  background-repeat:no-repeat;
}
.Oils .oilsName{
  position: absolute;
  bottom:0rem;
  text-align: center;
  width:100%;
  background: rgba(0, 0, 0, 0.43);
  line-height: 1.3rem;
  color:#fff;
}